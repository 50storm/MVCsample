<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryui")
    <script>
        $(function () {
            $("#open-sample-dialog").on('click', function () {
               // alert("クリックされました");
               // console.log("test");
                $("#sample-dialog").dialog({
                    resizable: false,
                    height: "auto",
                    width: 400,
                    modal: true,
                    closeText: "",//
                    buttons: {
                        "登録": function () {
                            $(this).dialog("close");
                            $("#Create").submit();

                        },
                        "キャンセル": function () {
                            $(this).dialog("close");
                            return false;

                        }
                    }
                });

                return false;

            });

            
        });
    </script>


